<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ji.recyclerview.activity.NormalActivity">

    <TextView
        android:id="@+id/tv_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@color/bgcolor"
        android:gravity="center"
        android:text="LinearLayoutManager  "
        android:textColor="@color/fontcolor" />

    <TextView
        android:id="@+id/tv_grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/bgcolor"
        android:gravity="center"
        android:text="GridLayoutManager  "
        android:textColor="@color/fontcolor" />


    <TextView
        android:id="@+id/tv_taggeredgrid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/bgcolor"
        android:gravity="center"
        android:text="StaggeredGridLayoutManager"
        android:textColor="@color/fontcolor" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
